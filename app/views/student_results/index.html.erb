<div class="row">
  <div class="col-lg-6 p-1">
    <%= search_form_for @q, id:'overall_search' do |form| %>
      <div class="form-group mb-0">
        <%= form.search_field :conversion_type_or_target_measure_unit_cont, class: "form-control overall_search", placeholder: 'Search' %>
      </div>
    <% end %>
  </div>
  <div class="col-lg-6 p-1">
    <%= link_to 'New Result', new_student_result_path, class:'btn btn-success btn-sm' %>
    <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#imprtResultFile">Import Excel File</button>
  </div>
</div>
<div class="row">
  <div class="col-lg-12 p-1">
    <div class="card card-primary card-outline">
      <div class="card-body">
        <div class="card-text">
          <p id="notice"><%= notice %></p>
          <div class="d-flex justify-content-between">
            <%= pagy_page_entries_info(@pagy) %>
            <%== pagy_bootstrap_nav(@pagy) %>
          </div>
          <div class="table-responsive">
            <table class="table table-hover table-bordered">
              <thead>
                <tr>
                  <th><%=sort_link(@q, :student_id, 'Student') %></th>
                  <th><%=sort_link(@q, :student_id, 'Teacher') %></th>
                  <th><%=sort_link(@q, :conversion_type, 'Conversion type') %></th>
                  <th><%=sort_link(@q, :input_measure_unit, 'Input measure unit') %></th>
                  <th><%=sort_link(@q, :target_measure_unit, 'Target measure unit') %></th>
                  <th><%=sort_link(@q, :input_value, 'Input value') %></th>
                  <th><%=sort_link(@q, :student_response, 'Student response') %></th>
                  <th><%=sort_link(@q, :output_value, 'Output value') %></th>
                  <th><%=sort_link(@q, :created_at, 'Created at') %></th>
                  <th colspan="3"></th>
                </tr>
              </thead>
              <tbody>
                <% @student_results.each_with_index do |student_result, index| %>
                  <tr>
                    <td><%= student_result.student.email %></td>
                    <td><%= student_result.teacher.email %></td>
                    <td><%= student_result.conversion_type %></td>
                    <td><%= student_result.input_measure_unit %></td>
                    <td><%= student_result.target_measure_unit %></td>
                    <td><%= student_result.input_value %></td>
                    <td><%= student_result.student_response %></td>
                    <td><%= student_result.output_value %></td>
                    <td><%= student_result.created_at %></td>
                    <td><%= link_to 'Show', student_result %></td>
                    <td><%= link_to 'Edit', edit_student_result_path(student_result) %></td>
                    <td><%= link_to 'Destroy', student_result, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
            <div class="float-right">
              <%== pagy_bootstrap_nav(@pagy) %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%= render 'import_file_form' %>
